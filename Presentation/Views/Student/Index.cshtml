@model IEnumerable<Application.DTOs.StudentDto>

@{
    ViewBag.Title = "Student List";
}

<h2>Student List</h2>

<p>
    <a class="btn btn-primary" asp-controller="Student" asp-action="Create">Create New Student</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Student Number</th>
            <th>Age</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model!)
        {
            <tr>
                <td>@student.FullName</td>
                <td>@student.Email</td>
                <td>@student.StudentNumber</td>
                <td>@student.Age</td>
                <td>@(student.IsActive ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
